@model UsuarioViewModel

@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buscar Usuario por ID</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, #0e4d92, #001f3f);
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        form {
            display: flex;
            align-items: flex-end;
        }

        .form-group {
            flex: 1;
            margin-right: 10px;
        }

        .btn-primary {
            margin-left: 10px;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.1);
            border: none;
            margin-top: 20px;
        }

        .card-body {
            padding: 20px;
        }

        .img-fluid {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            object-fit: cover;
        }

        .card-title {
            font-size: 1.5rem;
            margin-top: 10px;
            color: white; 
         }

        .card-text {
            font-size: 1.2rem;
            margin-top: 5px;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Buscar Usuario por ID</h1>
        <form method="post" asp-action="GetById">
            <div class="form-group">
                <input type="number" class="form-control" id="IdUsuario" placeholder="Digite el Id del usuario"name="id" required>
            </div>
            <button type="submit" class="btn btn-primary" asp-action="GetById">Buscar</button>
        </form>

        @if (Model != null)
        {
            <div class="card mt-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="@Model.Foto" class="img-fluid" alt="Foto del Usuario">
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title">Nombre</h5>
                            <p class="card-text">@Model.NombreUsuario</p>
                            <h5 class="card-title">Teléfono</h5>
                            <p class="card-text">@Model.Telefono</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>








