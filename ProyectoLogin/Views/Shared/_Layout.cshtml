<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoLogin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoLogin.styles.css" asp-append-version="true" />
</head>
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: linear-gradient(135deg, #667eea, #764ba2);
        background-size: cover;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .navbar {
        background-color: #fff;
        border-bottom: 1px solid #ddd;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand {
        color: #333;
        font-weight: bold;
    }

    .navbar-toggler {
        border: none;
    }

    .navbar-toggler-icon {
        background-color: #333;
    }

    .navbar-nav .nav-link {
        color: #333;
        transition: color 0.3s;
    }

        .navbar-nav .nav-link:hover {
            color: #667eea;
        }

    .container {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        background-color: #f9f9f9;
        max-width: 400px;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background-color: rgba(0, 0, 0, 0.03);
        color: #333;
        border-radius: 15px 15px 0 0;
        font-weight: bold;
        font-size: 24px;
        padding: 20px;
        text-align: center;
    }

    .card-body {
        padding: 20px;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 15px;
        padding: 10px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: none;
        }

        .form-control:hover {
            border-color: #667eea;
        }

    .btn-primary {
        background-color: #667eea;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.3s;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #764ba2;
            transform: translateY(-3px);
        }

    .alert-danger {
        background-color: #ff6b6b;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        padding: 10px;
        margin-top: 15px;
        text-align: center;
    }

    a {
        color: #667eea;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProyectoLogin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesion</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Inicio" asp-action="GetById">Buscar Usuarios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ProyectoLogin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
